<?xml version='1.0'?>

<!-- Inspired by RX-75-4 Guntank -->

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />

  <xacro:macro name="material_GuntankBaseBlue">
    <visual>
      <material>
        <ambient>0.133 0.2 0.466 1</ambient>
        <diffuse>0.133 0.2 0.466 1</diffuse>
        <specular>0.1 0.1 0.1 1</specular>
        <emissive>0 0 0 0</emissive>
      </material>
    </visual>
  </xacro:macro>

  <material name="Guntank Base Blue">
    <color rgba="0.133 0.2 0.466 1"/>
  </material>

  <xacro:macro name="material_GuntankTrackGrey">
    <visual>
      <material>
        <ambient>0.490 0.509 0.592 1</ambient>
        <diffuse>0.490 0.509 0.592 1</diffuse>
        <specular>0.1 0.1 0.1 1</specular>
        <emissive>0 0 0 0</emissive>
      </material>
    </visual>
  </xacro:macro>

  <material name="Guntank Track Grey">
    <color rgba="0.490 0.509 0.592 1"/>
  </material>

  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.5 0.4 0.2"/>
      </geometry>
      <material name="Guntank Base Blue"/>
    </visual>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.5 0.4 0.2"/>
      </geometry>
    </collision>
  </link>

  <gazebo reference="chassis">
    <xacro:material_GuntankBaseBlue />
  </gazebo>

  <link name='body'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <visual name='body_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.15 0.25 0.25"/>
      </geometry>
      <material name="Guntank Base Blue"/>
    </visual>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.15 0.25 0.25"/>
      </geometry>
    </collision>
  </link>

  <gazebo reference="body">
    <xacro:material_GuntankBaseBlue />
  </gazebo>

  <!-- Fixed joint for now -->
  <joint type="fixed" name="body_hinge">
    <origin xyz="0 0 0.225" rpy="0 0 0"/>
    <child link="body"/>
    <parent link="chassis"/>
  </joint>

  <link name='left_wheel'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
